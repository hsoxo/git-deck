{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "build",
            "group": "build",
            "problemMatcher": [],
            "label": "npm: build",
            "detail": "Build all packages"
        },
        {
            "type": "npm",
            "script": "dev:extension",
            "isBackground": true,
            "problemMatcher": {
                "owner": "typescript",
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "code": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*watching for file changes.*$",
                    "endsPattern": "^.*built in \\d+ms.*$"
                }
            },
            "label": "npm: dev:extension",
            "detail": "Watch extension in development mode"
        },
        {
            "type": "npm",
            "script": "dev:webview",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "."
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*VITE.*$",
                    "endsPattern": "^.*ready in.*$"
                }
            },
            "label": "npm: dev:webview",
            "detail": "Watch webview in development mode"
        }
    ]
}
