{
    "name": "git-gui",
    "displayName": "Git GUI",
    "description": "Visual Git GUI for VS Code",
    "version": "0.1.0",
    "publisher": "git-gui",
    "repository": {
        "type": "git",
        "url": "https://github.com/your-org/git-gui-vscode.git"
    },
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "SCM Providers"
    ],
    "extensionKind": [
        "workspace"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "gitGui.refresh",
                "title": "Git GUI: Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "gitGui.showOutput",
                "title": "Git GUI: Show Output",
                "icon": "$(output)"
            },
            {
                "command": "gitGui.stageFile",
                "title": "Stage File",
                "icon": "$(add)"
            },
            {
                "command": "gitGui.unstageFile",
                "title": "Unstage File",
                "icon": "$(remove)"
            },
            {
                "command": "gitGui.stageSelected",
                "title": "Stage Selected",
                "icon": "$(add)"
            },
            {
                "command": "gitGui.unstageAll",
                "title": "Unstage All Changes",
                "icon": "$(remove)"
            },
            {
                "command": "gitGui.openDiff",
                "title": "Open Diff"
            },
            {
                "command": "gitGui.discardChanges",
                "title": "Discard Changes",
                "icon": "$(discard)"
            },
            {
                "command": "gitGui.commit",
                "title": "Commit",
                "icon": "$(check)"
            },
            {
                "command": "gitGui.commitAmend",
                "title": "Commit (Amend)",
                "icon": "$(edit)"
            },
            {
                "command": "gitGui.openGraph",
                "title": "Open Git Graph",
                "icon": "$(git-commit)"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "git-gui",
                    "title": "Git GUI",
                    "icon": "$(git-branch)"
                }
            ]
        },
        "views": {
            "git-gui": [
                {
                    "id": "gitGui.commitView",
                    "name": "Commit",
                    "type": "webview"
                },
                {
                    "id": "gitGui.changesView",
                    "name": "Changes",
                    "type": "webview"
                }
            ]
        },
        "menus": {
            "commandPalette": [
                {
                    "command": "gitGui.refresh",
                    "when": "workspaceFolderCount != 0"
                },
                {
                    "command": "gitGui.stageFile",
                    "when": "false"
                },
                {
                    "command": "gitGui.unstageFile",
                    "when": "false"
                },
                {
                    "command": "gitGui.openDiff",
                    "when": "false"
                },
                {
                    "command": "gitGui.discardChanges",
                    "when": "false"
                }
            ],
            "view/title": [
                {
                    "command": "gitGui.refresh",
                    "when": "view == gitGui.changesView",
                    "group": "navigation"
                },
                {
                    "command": "gitGui.openGraph",
                    "when": "view == gitGui.changesView",
                    "group": "navigation"
                },
                {
                    "command": "gitGui.stageSelected",
                    "when": "view == gitGui.changesView",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "Git GUI",
            "properties": {
                "gitGui.logLevel": {
                    "type": "string",
                    "enum": [
                        "debug",
                        "info",
                        "warn",
                        "error"
                    ],
                    "default": "debug",
                    "description": "Log level for Git GUI extension (set to 'debug' to see detailed logs in Output panel)"
                },
                "gitGui.maxLogCount": {
                    "type": "number",
                    "default": 100,
                    "minimum": 10,
                    "maximum": 1000,
                    "description": "Maximum number of commits to load in history"
                },
                "gitGui.enableCache": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable caching for read-only operations"
                },
                "gitGui.cacheTTL": {
                    "type": "number",
                    "default": 1000,
                    "minimum": 100,
                    "maximum": 10000,
                    "description": "Cache time-to-live in milliseconds"
                },
                "gitGui.rpcTimeout": {
                    "type": "number",
                    "default": 30000,
                    "minimum": 5000,
                    "maximum": 120000,
                    "description": "RPC request timeout in milliseconds"
                },
                "gitGui.autoRefresh": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically refresh git status"
                },
                "gitGui.autoRefreshInterval": {
                    "type": "number",
                    "default": 5000,
                    "minimum": 1000,
                    "maximum": 60000,
                    "description": "Auto refresh interval in milliseconds"
                },
                "gitGui.fileWatcherDebounceDelay": {
                    "type": "number",
                    "default": 300,
                    "minimum": 100,
                    "maximum": 2000,
                    "description": "Debounce delay for file watcher in milliseconds (lower = more responsive, higher = better performance)"
                },
                "gitGui.fileWatcherIgnorePatterns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "node_modules",
                        ".git",
                        "dist",
                        "build",
                        ".vscode",
                        "coverage",
                        "out",
                        ".next",
                        ".nuxt"
                    ],
                    "description": "Directory patterns to ignore in file watcher"
                }
            }
        }
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "prebuild": "npm run build --workspace=@git-gui/webview",
        "postbuild": "rm -rf webview-dist && cp -r ../webview/dist ./webview-dist",
        "prepackage": "npm run build",
        "package": "vsce package --allow-missing-repository --no-dependencies",
        "test": "vitest --run",
        "test:watch": "vitest",
        "test:coverage": "vitest --run --coverage"
    },
    "dependencies": {
        "@git-gui/shared": "*",
        "chokidar": "3.5.3",
        "simple-git": "3.22.0"
    },
    "devDependencies": {
        "@types/node": "20.11.5",
        "@types/vscode": "1.80.0",
        "@typescript-eslint/eslint-plugin": "8.55.0",
        "@typescript-eslint/parser": "8.55.0",
        "@vitest/coverage-v8": "1.2.0",
        "@vscode/test-electron": "2.3.9",
        "@vscode/vsce": "2.22.0",
        "eslint": "9.39.2",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-prettier": "5.5.5",
        "eslint-plugin-react": "7.37.5",
        "eslint-plugin-react-hooks": "7.0.1",
        "prettier": "3.8.1",
        "tsup": "8.0.1",
        "typescript": "5.3.3",
        "vitest": "1.2.0"
    }
}